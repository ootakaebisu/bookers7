<h1>ユーザ情報の更新</h1>
<%= form_with model:@user, url:user_path(@user), local:true do |f| %>
<%= render 'layouts/error_messages', model: @user %>
  <h4>name</h4>
  <%= f.text_field :name %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>

  <h4>Image</h4>
  <%= f.text_area :image %>

  <%= f.submit 'Update User' %>
<% end %>