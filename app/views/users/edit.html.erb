<div class="container">
  <h1>User info</h1>
  <%= form_with model:@user, url:user_path(@user), local:true do |f| %>
  <%= render 'layouts/error_messages', model: @user %>
    <h4>name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <h4>Introduction</h4>
    <%= f.text_area :introduction %>

    <%= f.submit 'Update User' %>
  <% end %>

</div>