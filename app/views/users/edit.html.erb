<div class="container">
  <h2>User info</h2>
  <%= form_with model:@user, url:user_path(@user), local:true do |f| %>
  <%= render 'layouts/error_messages', model: @user %>
    <label>name</label>
    <%= f.text_field :name %>
    <label>Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <label>Introduction</label>
    <%= f.text_area :introduction %>

    <div class="field">
    <%= f.submit 'Update User' %>
    </div>

  <% end %>

</div>