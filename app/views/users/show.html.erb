<h4>ログイン後の一覧ページ画面です</h4>

<!--テーブルタグ使って見た目整える-->
<% @books.each do |book| %>
  <%= link_to book.title, book_path(book.id) %>
  <span><%= book.body %><span>
<% end %>

<%= render 'books/newbook', book: @book %>


<h1>ユーザプロフィールです</h1>
<p><%= @user.name %></p>
<p><%= @user.introduction %></p>
<%= link_to "リンク（仮）", edit_user_path(@user) %>
