<h4>ログイン後の一覧ページ画面です</h4>

<!--テーブルタグ使って見た目整える-->
<% @books.each do |book| %>
  <%= link_to book.title, book_path(book.id) %>
  <span><%= book.body %><span>
<% end %>

<h4>本の新規作成</h4>
<%= form_with model:@book_new, url:'/books', local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>ユーザプロフィールです</h1>
<p><%= @user.name %></p>
<p><%= @user.introduction %></p>
<%= link_to "リンク（仮）", edit_user_path(@user) %>
