<h1>ユーザ一覧</h1>

<% @users.each do |user| %>
  <span><%= user.name %></span>
  <%= link_to "show", book_path(user.id) %>
<% end %>

<h1>本の新規作成</h1>
<%= form_with model:@book_new, url:'/books', local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %> 