<div class="profile-container">

  <h2>User info</h1>

  <%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "100x100" %>

  <table>

    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
  <!--<h3 class="profile-name">< %= user.name %></h3>-->
  <!--<p>< %= user.introduction %></p>-->


  <% if user.id == current_user.id %>
    <!--アイコンだけ入れたいときはclassに-->
    <%= link_to("", edit_user_path(current_user.id), {class: "pull-right, fas fa-wrench"}) %>
  <% end %>

  <!--< %= link_to "リンク（仮）", edit_user_path(current_user.id) %>-->
</div>




