

<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
<%= render 'layouts/error_messages', model: @book %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Update Book' %>

  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>

<% end %>