<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h1>Editing Book</h1>
      <%= form_with model:@book, local: true do |f| %>
      <%= render 'layouts/error_messages', model: @book %>

      <form class="edit_book">
        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title , class: "col-xs-12" %>
        </div>

        <div class="field row">
          <label for ="book_opinion">Opinion</label>
          <%= f.text_field :body , class: "col-xs-12" %>
        </div>

          <%= f.submit 'Update Book' , class: "col-xs-12 btn btn-primary" %>


          <%= link_to "Show", book_path(@book) %>
          |
          <%= link_to "Back", books_path %>
      </form>

      <% end %>
    </div>
  </div>
</div>